<div class="content {% if section.settings.show_aboutblock == false and section.settings.show_aboutbanner == false and section.blocks.size == 0 %}nospace-topbottom{% endif %}" id="Aboutus">
  <section id="Aboutus-block">
    <div class="page-width"> 
      <div class="row">
        {% if page.content.size > 0 %}
          <div class="rte">
            {{ page.content }}
          </div>
        {% endif %}
        {% if section.settings.title1 != blank %}
          <div class="section-header text-center">
            <h2 class="home-title">{{ section.settings.title1 | escape }}</h2>
          </div>
        {% endif %}
        {% if section.settings.show_aboutblock %}
          <div class="Aboutus-information">
            {% if section.settings.image != blank %}
              <div class="Aboutus-banner col-lg-6 col-md-12">
                <div class="image-container">
                  <a class="ishi-customhover-{{ section.settings.bannerhover1 }} product-banner" href="{% if section.settings.bannerimage1_link != blank %}{{ section.settings.bannerimage1_link }}{% else %}/{% endif %}">
                    <img
                      src="{{ section.settings.image | img_url: 'master' }}"
                      data-src="{{ img_url }}"
                      data-sizes="auto"
                      alt="{{ section.settings.image.alt | escape }}">
                  </a>
                </div>
              </div>
            {% endif %}
            <div class="information-container {% if section.settings.image!= blank %}col-lg-6 col-md-12{% else%}col-md-12{% endif %}">
              <div class="title-container">
                {% if section.settings.heading != blank %}
                  <h3 class="heading">{{ section.settings.heading }}</h3>
                {% endif %}
              </div>
              <div class="list-Aboutus-info">
                {% if section.settings.info != blank %}
                  {{ section.settings.info }}
                {% endif %}
              </div>
              {% if section.settings.btn_link %}
                <div class="about-btn">
                  <a href="{% if section.settings.btn_link != blank %}{{ section.settings.btn_link }}{% else %}/{% endif %}" class="btn">
                    {{ section.settings.about_btn }}
                    <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon--wide icon-arrow-right" viewBox="0 0 20 8"><path d="M4.814 7.555C3.95 6.61 3.2 5.893 2.568 5.4 1.937 4.91 1.341 4.544.781 4.303v-.44a9.933 9.933 0 0 0 1.875-1.196c.606-.485 1.328-1.196 2.168-2.134h.752c-.612 1.309-1.253 2.315-1.924 3.018H19.23v.986H3.652c.495.632.84 1.1 1.036 1.406.195.306.485.843.869 1.612h-.743z" fill-rule="evenodd"></path></svg>
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
        {% if section.blocks.size > 0 %}
          <div class="Aboutus-bottom {% if section.settings.show_aboutblock == true or section.settings.show_aboutbanner == true %}about-topspace{% endif %} {% if section.settings.show_aboutblock == false %}notopspace{% endif %}">
            <div class="title-container">
              {% if section.settings.formheading != blank %}
                <h3 class="heading">{{ section.settings.formheading | escape }}</h3>
              {% endif %}
            </div>
            {% if section.settings.formsubheading != blank %}
              <p class="subheading">{{ section.settings.formsubheading }}</p>
            {% endif %}
            <div class="about-services">
              {% for block in section.blocks %} 
                  <div class="services col-md-4 col-sm-4 col-xs-12">
                    {% if block.settings.link != blank %}
                      <a href="{{ block.settings.link }}">
                    {% endif %}
                      <div class="service-img">
                        {% if block.settings.service-image != blank %}
                        {{ block.settings.service-image | img_tag: block.settings.service-image.alt}}
                        {% endif %}
                      </div>
                      <div class="service-block">
                        <div class="service-title">{{ block.settings.service-title | escape }}</div>
                         <p class="service-desc">{{ block.settings.service-desc }}</p>
                      </div> 
                    {% if block.settings.link != blank %}
                      </a>
                    {% endif %}
                  </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        {% if section.settings.show_aboutbanner %}
          <div class="Aboutus-information section-second {% if section.settings.show_aboutblock == true or section.blocks.size > 0 %}information-topspace{% endif %}">
            {% if section.settings.image2 != blank %}
            <div class="Aboutus-banner col-lg-6 col-md-12">
              <div class="image-container">
                <a class="ishi-customhover-{{ section.settings.bannerhover2 }} product-banner" href="{% if section.settings.bannerimage2_link != blank %}{{ section.settings.bannerimage2_link }}{% else %}/{% endif %}">
                  <img
                    src="{{ section.settings.image2 | img_url: 'master' }}"
                    data-src="{{ img_url }}"
                    data-sizes="auto"
                    alt="{{ section.settings.image2.alt | escape }}">
                </a>
              </div>
            </div>
            {% endif %} 
            <div class="information-container {% if section.settings.image2!= blank %}col-lg-6 col-md-12{% else%}col-md-12{% endif %}">
              <div class="title-container">
                {% if section.settings.heading2 != blank %}
                  <h3 class="heading">{{ section.settings.heading2 }}</h3>
                {% endif %}
              </div>
              <div class="list-Aboutus-info">
                {% if section.settings.info2 != blank %}
                  {{ section.settings.info2 }}
                {% endif %}
              </div>
              {% if section.settings.btn_link2 %}
                <div class="about-btn">
                  <a href="{% if section.settings.btn_link2 != blank %}{{ section.settings.btn_link2 }}{% else %}/{% endif %}" class="btn">
                    {{ section.settings.about_btn2 }}
                    <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon--wide icon-arrow-right" viewBox="0 0 20 8"><path d="M4.814 7.555C3.95 6.61 3.2 5.893 2.568 5.4 1.937 4.91 1.341 4.544.781 4.303v-.44a9.933 9.933 0 0 0 1.875-1.196c.606-.485 1.328-1.196 2.168-2.134h.752c-.612 1.309-1.253 2.315-1.924 3.018H19.23v.986H3.652c.495.632.84 1.1 1.036 1.406.195.306.485.843.869 1.612h-.743z" fill-rule="evenodd"></path></svg>
                  </a>
                </div>
              {% endif %}
            </div>
            
          </div>
        {% endif %}           
      </div>
    </div>
  </section>
</div>

